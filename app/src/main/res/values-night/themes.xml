<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GrocerEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/BlueLight</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/BlueLight</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:statusBarColor">@color/grayLight</item>
        <item name="android:navigationBarColor">@color/gray</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">100%</item>
        <item name="cornerSizeTopRight">100%</item>
        <item name="cornerSizeBottomRight">100%</item>
        <item name="cornerSizeBottomLeft">100%</item>
    </style>

    <style name="Theme.GrocerEase.Icon" parent="Base.Theme.GrocerEase">
        <item name="icon">@color/white</item>
    </style>
</resources>
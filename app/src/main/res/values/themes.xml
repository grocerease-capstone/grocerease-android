    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">100%</item>
        <item name="cornerSizeTopRight">100%</item>
        <item name="cornerSizeBottomRight">100%</item>
        <item name="cornerSizeBottomLeft">100%</item>
    </style>

    <style name="Theme.GrocerEase.SplashScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorOnBackground">@color/splash_screen_background</item>
    </style>

    <style name="RoundedSquare">
